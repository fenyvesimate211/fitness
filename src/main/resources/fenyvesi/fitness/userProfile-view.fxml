<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="fenyvesi.fitness.FitnessController" vgap="10" hgap="10">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="userProfileText" text="User Profile" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label fx:id="nameText" text="Name:" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="nameTextFiled" text="Write your name here" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label fx:id="genderText" text="Gender:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="genderTextFiled" text="Select your gender" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <Label fx:id="dateOfBirthText" text="Date of birth:" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="dateOfBirthTextFiled" text="Select your date of birth" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

    <Label fx:id="weightText" text="Weight:" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <TextField fx:id="weightTextFiled" text="Select your weight" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

    <Label fx:id="heightText" text="Height:" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <TextField fx:id="heightTextFiled" text="Select your height" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <Label fx:id="dailyGoalText" text="Daily goal:" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <TextField fx:id="dailyGoalTextFiled" text="Select your daily goal" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
    <Label fx:id="calorieText" text="kcal" GridPane.columnIndex="3" GridPane.rowIndex="6"/>

    <Button text="Create profile" onAction="#onCreateProfileButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="7"/>
</GridPane>